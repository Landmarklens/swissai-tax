# API Configuration for Local Development
# Using production API endpoint for local development
REACT_APP_API_BASE_URL=https://api.swissai.tax
REACT_APP_API_KEY=

# Environment
REACT_APP_ENV=development

# Feature Flags
REACT_APP_ENABLE_OCR=true
REACT_APP_ENABLE_EFILING=false
REACT_APP_SUPPORTED_CANTONS=ZH,BE,LU,UR,SZ

# Google OAuth
REACT_APP_GOOGLE_REDIRECT_URL=http://localhost:3000/auth/google/callback

# Stripe Configuration (use test keys for development)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_

# Debug
REACT_APP_ENABLE_DEBUG_LOGGING=true
