# API Configuration
REACT_APP_API_BASE_URL=https://api.swissai.tax
REACT_APP_API_KEY=your-api-key

# Firebase Configuration (from existing HomeAI)
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-auth-domain
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-storage-bucket
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id

# AWS Configuration
REACT_APP_S3_BUCKET=swisstax-user-documents
REACT_APP_AWS_REGION=eu-central-1

# Feature Flags
REACT_APP_ENABLE_OCR=true
REACT_APP_ENABLE_EFILING=false
REACT_APP_SUPPORTED_CANTONS=ZH,BE,LU,UR,SZ

# Google OAuth (set in AWS Parameter Store for production)
REACT_APP_GOOGLE_REDIRECT_URL=https://swissai.tax/google-redirect

# Stripe Configuration
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Environment
REACT_APP_ENV=development